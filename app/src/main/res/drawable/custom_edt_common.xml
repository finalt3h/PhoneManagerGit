<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <shape>
            <corners android:radius="@dimen/border_button" />
            <stroke android:width="1dp" android:color="@color/backgound" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <corners android:radius="@dimen/border_button" />
            <stroke android:width="1dp" android:color="@color/colorGreenBorder" />
        </shape>
    </item>

</selector>